{
    "name": "acseo/typesense-bundle",
    "description": "This bundle provides integration with Typesense in Symfony",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Potier",
            "email": "nicolas.potier@acseo.fr"
        }
    ],
    "require": {
        "php": "^7.4||^8.0",
        "doctrine/orm": "~2.8,>=2.8.0",
        "symfony/framework-bundle": "^3.4|^4.3|^5|^6.0",
        "symfony/http-client-contracts": "^1.0|^2.0|^3.0",
        "typesense/typesense-php": "^4.1.0",
        "php-http/curl-client": "^2.2",
        "monolog/monolog": "^2.3",
        "symfony/property-access": "^3.4|^4.3|^5|^6.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5.0|^6.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": { "ACSEO\\TypesenseBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "ACSEO\\TypesenseBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "typesenseServer": [
          "Composer\\Config::disableProcessTimeout",
          "docker run -i -p 8108:8108 -v/tmp/typesense-server-data-1c/:/data typesense/typesense:0.22.0 --data-dir /data --api-key=123 --listen-port 8108 --enable-cors"
        ]
    }
}
